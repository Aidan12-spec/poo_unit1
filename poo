package poo;

import uni1a.*;

public class PruebaAudioVisual {

    public static void main(String[] args) {
        System.out.println("Hello from Eclipse!");

        // Crear instancias de las subclases
        ContenidoAudioVisual[] contenidos = new ContenidoAudioVisual[5];
        contenidos[0] = new Pelicula("Avatar", 125, "Accion", "20th Century Studios", "Giovanni Ribisi");
        contenidos[1] = new SerieDeTV("Game of Thrones", 60, "Fantasy", 8);
        contenidos[2] = new Documental("Cosmos", 45, "Science", "Astronomy", "Neil Tyson, Carl Sagan y Steven Soter");
        contenidos[3] = new Youtube("Me at the zoo", 19, "Vlog personal", "Jawed Karim", "23/03/2005", "Primer Video");
        contenidos[4] = new Instagram("Test", 0, "Foto de un perro", "Kevin Systrom", "16/07/2010", "Primera publicacion");
        
        // Mostrar los detalles de cada contenido audiovisual
        for (ContenidoAudioVisual contenido : contenidos) {
            contenido.mostrarDetalles();
        }
    }
}
